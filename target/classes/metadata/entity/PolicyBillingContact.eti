    iface="gw.api.domain.account.AccountSyncable"
    impl="gw.contact.PolicyBillingContactAccountSyncableImpl"/>
  <implementsInterface
    iface="gw.api.domain.account.Mergeable"
    impl="gw.contact.SingletonPolicyContactRoleMergeableImpl"/>
</subtype>