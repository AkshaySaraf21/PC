<?xml version="1.0"?>
<typelistextension
  xmlns="http://guidewire.com/typelists"
  desc="All available types of policies"
  name="PolicyPeriodStatus">
  <typecode
    code="Draft"
    desc="Policy is editable. Audit, Cancellation, PolicyChange, Reinstatement, Rewrite and RewriteNewAccount jobs initially set this status"
    name="Draft"
    priority="0">
    <category
      code="Confirmation"
      typelist="LetterType"/>
  </typecode>
  <typecode
    code="Quoted"
    desc="Policy has been quoted. Quote process sets this status when complete"
    name="Quoted"
    priority="10">
    <category
      code="Confirmation"
      typelist="LetterType"/>
  </typecode>
  <typecode
    code="Bound"
    desc="Policy has been bound. Cancellation, Issuance, Reinstatement, Rewrite, RewriteNewAccount, Submission and PolicyChange jobs set this status"
    name="Bound"
    priority="20">
    <category
      code="Confirmation"
      typelist="LetterType"/>
  </typecode>
  <typecode
    code="Declined"
    desc="Policy has been declined by carrier"
    name="Declined"
    priority="1">
    <category
      code="Declination"
      typelist="LetterType"/>
  </typecode>
  <typecode
    code="NotTaken"
    desc="Policy was not-taken"
    name="Not-Taken"
    priority="20">
    <category
      code="NotTakenAck"
      typelist="LetterType"/>
  </typecode>
  <typefilter
    desc="What PolicyPeriodStatuses indicate that the PolicyPeriod can no longer change status"
    name="Closed">
    <include
      code="Rescinded"/>
    <include
      code="Waived"/>
    <include
      code="AuditComplete"/>
  </typefilter>
  <typecode
    code="Quoting"
    desc="Policy is in the process of being quoted. Quote process initially sets this status"
    name="Quoting"
    priority="15">
    <category
      code="Confirmation"
      typelist="LetterType"/>
  </typecode>
  <typecode
    code="Binding"
    desc="Policy binding is in progress"
    name="Binding"
    priority="20">
    <category
      code="Confirmation"
      typelist="LetterType"/>
  </typecode>
  <typecode
    code="Renewing"
    desc="Renewal for policy is being scheduled"
    name="Renewing"
    priority="20">
    <category
      code="Confirmation"
      typelist="LetterType"/>
  </typecode>
  <typecode
    code="NonRenewing"
    desc="Non-renewal for policy is being scheduled"
    name="Non-renewing"
    priority="10"/>
  <typecode
    code="NotTaking"
    desc="Policy is being processed for being not-taken"
    name="Not-taking"
    priority="20">
    <category
      code="NotTakenAck"
      typelist="LetterType"/>
  </typecode>
  <typecode
    code="Canceling"
    desc="Policy is being scheduled for cancellation"
    name="Canceling"
    priority="20"/>
  <typecode
    code="Rescinding"
    desc="Cancellation rescinding process started"
    name="Rescinding"
    priority="20"/>
  <typecode
    code="Rescinded"
    desc="Cancellation has been rescinded"
    name="Rescinded"
    priority="20"/>
  <typecode
    code="Reinstating"
    desc="Reinstatement process has started"
    name="Reinstating"
    priority="20">
    <category
      code="Confirmation"
      typelist="LetterType"/>
  </typecode>
  <typecode
    code="AuditComplete"
    desc="Audit is completed"
    name="Completed"
    priority="20"/>
  <typecode
    code="Waived"
    desc="Audit was waived"
    name="Waived"
    priority="20"/>
  <typefilter
    desc="What PolicyPeriodStatuses indicate that the PolicyPeriod is still in progress"
    name="Open">
    <include
      code="New"/>
    <include
      code="Draft"/>
    <include
      code="Quoting"/>
    <include
      code="Quoted"/>
    <include
      code="Binding"/>
    <include
      code="Renewing"/>
    <include
      code="NonRenewing"/>
    <include
      code="NotTaking"/>
    <include
      code="Canceling"/>
    <include
      code="Rescinding"/>
    <include
      code="Reinstating"/>
  </typefilter>
  <typefilter
    desc="What PolicyPeriodStatuses indicate that the PolicyPeriod can be expired"
    name="Expirable">
    <include
      code="New"/>
    <include
      code="Draft"/>
    <include
      code="Quoted"/>
  </typefilter>
  <typefilter
    desc="What PolicyPeriodStatuses indicate that the PolicyPeriod can be copied"
    name="Copyable">
    <include
      code="Expired"/>
    <include
      code="Declined"/>
    <include
      code="NotTaken"/>
  </typefilter>
  <typefilter
    desc="What PolicyPeriodStatuses indicate that the PolicyPeriod has been posted"
    name="Posted">
    <include
      code="Bound"/>
    <include
      code="AuditComplete"/>
  </typefilter>
  <typefilter
    desc="What PolicyPeriodStatuses indicate that the PolicyPeriod is about to enter a closed state?"
    name="Closing">
    <include
      code="Binding"/>
    <include
      code="Canceling"/>
    <include
      code="NonRenewing"/>
    <include
      code="NotTaking"/>
    <include
      code="Reinstating"/>
    <include
      code="Renewing"/>
    <include
      code="Rescinding"/>
  </typefilter>
</typelistextension>