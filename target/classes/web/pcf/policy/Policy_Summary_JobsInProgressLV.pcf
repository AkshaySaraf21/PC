<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../pcf.xsd">
  <ListViewPanel
    id="Policy_Summary_JobsInProgressLV">
    <ExposeIterator
      flags="job"
      valueType="entity.Job"
      widget="Policy_Summary_JobsInProgressLV"/>
    <Require
      name="policyPeriod"
      type="PolicyPeriod"/>
    <Require
      name="asOfDate"
      type="DateTime"/>
    <RowIterator
      checkBoxVisible="!job.SelectedVersion.PolicyTerm.Archived"
      editable="false"
      elementName="job"
      hasCheckBoxes="true"
      value="policyPeriod.Policy.OpenJobs.where(\ j -&gt; j.SelectedVersion.Status != PolicyPeriodStatus.TC_BOUND) ">
      <ToolbarFlag
        name="job"/>
      <Row>
        <DateCell
          id="PeriodStart"
          label="displaykey.Web.PolicyFile.Jobs.PeriodEffDate"
          value="job.LatestPeriod.PeriodStart"/>
        <DateCell
          id="EffectiveDate"
          label="displaykey.Web.PolicyFile.Jobs.TransEffDate"
          sortDirection="descending"
          sortOrder="1"
          value="job.LatestPeriod.EditEffectiveDate"/>
        <Cell
          id="Status"
          label="displaykey.Web.PolicyFile.Jobs.Status"
          value="job.DisplayStatus"/>
        <Cell
          available="job.Viewable"
          id="JobInProgressType"
          label="displaykey.Web.PolicyFile.Jobs.Type"
          value="job.DisplayType"/>
        <Cell
          action="JobForward.go(job)"
          available="job.Viewable"
          id="JobNumber"
          label="displaykey.Web.PolicyFile.Jobs.WorkOrderNumber"
          value="job.JobNumber"/>
        <Cell
          id="Comment"
          label="displaykey.Web.PolicyFile.Summary.Transactions.Comment"
          value="job.Description"/>
      </Row>
    </RowIterator>
  </ListViewPanel>
</PCF>