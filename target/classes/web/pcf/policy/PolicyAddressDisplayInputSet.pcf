<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../pcf.xsd">
  <InputSet
    editable="false"
    id="PolicyAddressDisplayInputSet">
    <Require
      name="period"
      type="PolicyPeriod"/>
    <Require
      name="showLabel"
      type="boolean"/>
    <Variable
      initialValue="period.Archived ? null : new gw.pcf.policysummary.PolicyInfoAddressOwner(new gw.globalization.PolicyAddressAdapter(period.PolicyAddress), showLabel)"
      name="addressOwner"
      recalculateOnRefresh="true"
      type="gw.api.address.AddressOwner"/>
    <InputSetRef
      def="GlobalAddressInputSet(addressOwner)"
      id="globalAddressContainer"
      mode="addressOwner.SelectedMode"
      widgets="globalAddressContainer"/>
    <Input
      id="AddressType"
      label="displaykey.Web.ContactDetail.AddressDetail.AddressType"
      value="period.PolicyAddress.AddressType"/>
    <Input
      id="AddressDescription"
      label="displaykey.Web.ContactDetail.AddressDetail.Description"
      value="period.PolicyAddress.Description"/>
  </InputSet>
</PCF>