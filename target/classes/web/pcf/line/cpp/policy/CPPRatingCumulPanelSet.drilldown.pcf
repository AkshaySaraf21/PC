<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../../pcf.xsd">
  <PanelSet
    id="CPPRatingCumulPanelSet"
    mode="drilldown">
    <Require
      name="period"
      type="PolicyPeriod"/>
    <Require
      name="jobWizardHelper"
      type="web.job.JobWizardHelper"/>
    <Require
      name="isEditable"
      type="boolean"/>
    <DetailViewPanel>
      <InputColumn>
        <Label
          label="displaykey.Web.Policy.PolicyLine.Summary"/>
        <ListViewInput
          labelAbove="true">
          <Toolbar/>
          <ListViewPanel>
            <RowIterator
              editable="false"
              elementName="line"
              value="period.Lines">
              <IteratorSort
                sortBy="line.Pattern.Priority"
                sortOrder="1"/>
              <Row>
                <TextCell
                  id="linedescription"
                  label="displaykey.Web.Policy.Quote.PolicyLine"
                  value="line.DisplayName"/>
                <MonetaryAmountCell
                  action="CPPRatingCumulPopup.push(period, line, isEditable, jobWizardHelper)"
                  formatType="currency"
                  id="linePremium"
                  label="displaykey.Web.Policy.Quote.Premium"
                  value="line.Costs.AmountSum(period.PreferredSettlementCurrency)"/>
              </Row>
            </RowIterator>
          </ListViewPanel>
        </ListViewInput>
      </InputColumn>
    </DetailViewPanel>
  </PanelSet>
</PCF>