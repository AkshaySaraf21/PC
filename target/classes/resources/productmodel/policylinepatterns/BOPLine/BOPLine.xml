          rateFactorType="Protection"
          refCode="BOPProtectionRate"/>
        <RateFactorPattern
          defaultMaximum="0.1200"
          defaultMinimum="-0.1200"
          lookupTableName="BOPRateFactor"
          priority="6"
          public-id="RateFactor_RiskNotInClassifPlan"
          rateFactorType="RiskNotInClassifPlan"
          refCode="BOPRiskRate"/>
      </RateFactorPatterns>
    </ModifierPattern>
    <ModifierPattern
      lookupTableName="BOPModifier"
      modifierDataType="rate"
      modifierSubtype="BOPModifier"
      priority="-1"
      public-id="BOPConditionalSurcharge"
      referenceDateByType="PolicyTerm"
      scheduleRate="true">
      <AvailabilityScript><![CDATA[return BusinessOwnersLine.AllCoverages.Count > 8]]></AvailabilityScript>
      <RateFactorPatterns>
        <RateFactorPattern
          defaultMaximum="0.5"
          defaultMinimum="0"
          lookupTableName="BOPRateFactor"
          priority="-1"
          public-id="zmph2tfehq6o99iv8ivd6s4ptga"
          rateFactorType="PolicyExpense"
          refCode="Conditional Surcharge"/>
      </RateFactorPatterns>
    </ModifierPattern>
    <ModifierPattern
      lookupTableName="BOPModifier"
      modifierDataType="boolean"
      modifierSubtype="BOPModifier"
      priority="-1"
      public-id="BOPLocationDispersionCredit"
      referenceDateByType="PolicyTerm">
      <AvailabilityScript><![CDATA[// multiple locations in different zipcodes implies dispersed location and therefore reduced risk
return BusinessOwnersLine.Branch.PolicyLocations.map(\ p -> p.PostalCode).toSet().Count > 1]]></AvailabilityScript>
    </ModifierPattern>
  </ModifierPatterns>
  <OfficialIdPatterns/>
  <AvailableCoverageCurrencies>
    <AvailableCoverageCurrency
      currency="usd"
      public-id="BOPLineusd"/>
