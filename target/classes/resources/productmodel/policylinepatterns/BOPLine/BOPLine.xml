    <ModifierPattern
      defaultMaximum="0.2500"
      defaultMinimum="-0.2500"
      displayEligibility="false"
      displayJustification="true"
      displayRange="true"
      displayValueFinal="false"
      lookupTableName="BOPModifier"
      modifierDataType="rate"
      modifierSubtype="BOPModifier"
      priority="1000"
      public-id="BOPScheduleCredits"
      referenceDateByType="DefinedObject"
      scheduleRate="true"
      splitOnAnniversary="false">
      <RateFactorPatterns>
        <RateFactorPattern
          defaultMaximum="0.0500"
          defaultMinimum="-0.0500"
          lookupTableName="BOPRateFactor"
          priority="1"
          public-id="RateFactor_Building"
          rateFactorType="Building"
          refCode="BOPBldgRate"/>
        <RateFactorPattern
          defaultMaximum="0.0300"
          defaultMinimum="-0.0300"
          lookupTableName="BOPRateFactor"
          priority="2"
          public-id="RateFactor_Employees"
          rateFactorType="Employees"
          refCode="BOPEmpRate"/>
        <RateFactorPattern
          defaultMaximum="0.0800"
          defaultMinimum="-0.0800"
          lookupTableName="BOPRateFactor"
          priority="3"
          public-id="RateFactor_Management"
          rateFactorType="Management"
          refCode="BOPMangeRate"/>
        <RateFactorPattern
          defaultMaximum="0.0500"
          defaultMinimum="-0.0500"
          lookupTableName="BOPRateFactor"
          priority="4"
