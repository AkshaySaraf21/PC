<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../pcf.xsd">
  <ListViewPanel
    id="UserRolesLV">
    <ExposeIterator
      valueType="entity.UserRole"
      widget="UserRolesLV"/>
    <Require
      name="user"
      type="User"/>
    <RowIterator
      editable="true"
      elementName="userRole"
      hasCheckBoxes="true"
      hideCheckBoxesIfReadOnly="true"
      toAdd="user.addToRoles(userRole)"
      toRemove="user.removeFromRoles(userRole)"
      value="user.Roles">
      <Row>
        <RangeCell
          action="RoleDetailPage.go(userRole.Role)"
          editable="true"
          id="RoleName"
          label="displaykey.Web.UserRoles.Role.Name"
          required="true"
          unique="true"
          value="userRole.Role"
          valueRange="user.listAvailableRoles()"
          wrap="true">
          <PostOnChange
            target="DATA_ONLY"/>
        </RangeCell>
        <Cell
          id="Description"
          label="displaykey.Web.UserRoles.Role.Description"
          value="userRole.Role.Description"
          width="300"
          wrap="true"/>
      </Row>
    </RowIterator>
  </ListViewPanel>
</PCF>