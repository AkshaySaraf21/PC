<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../pcf.xsd">
  <ListViewPanel
    id="UserAttributesLV">
    <ExposeIterator
      valueType="entity.AttributeUser"
      widget="UserAttributesLV"/>
    <Require
      name="user"
      type="User"/>
    <RowIterator
      conversionExpression="gw.api.admin.UserAttributeUtil.createAttributeUsers(PickedValue, CurrentLocation)"
      editable="true"
      elementName="attribute"
      hasCheckBoxes="true"
      pickLocation="UserAttributesPopup.push()"
      toAdd="user.addToAttributes(attribute)"
      toRemove="user.removeFromAttributes(attribute)"
      value="user.Attributes">
      <Row>
        <Cell
          id="Name"
          label="displaykey.Web.Admin.UserAttributes.Name"
          validationExpression="gw.web.admin.UserUIHelper.verifyAttributeNameIsUnique(attribute, user.Attributes.toList())"
          value="attribute.Attribute.Name"/>
        <Cell
          id="Description"
          label="displaykey.Web.Admin.UserAttributes.Description"
          value="attribute.Attribute.Description"/>
        <Cell
          id="Type"
          label="displaykey.Web.Admin.UserAttributes.Type"
          value="attribute.Attribute.Type"/>
      </Row>
    </RowIterator>
  </ListViewPanel>
</PCF>