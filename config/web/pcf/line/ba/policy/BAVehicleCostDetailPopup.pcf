<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../../pcf.xsd">
  <Popup
    id="BAVehicleCostDetailPopup"
    title="displaykey.Web.Policy.BA.VehiclePremiums">
    <LocationEntryPoint
      signature="BAVehicleCostDetailPopup(vehicle: BusinessVehicle, vehicleCosts : java.util.List&lt;entity.BACost&gt;)"/>
    <Variable
      name="vehicle"
      type="BusinessVehicle"/>
    <Variable
      name="vehicleCosts"
      type="java.util.List&lt;entity.BACost&gt;"/>
    <Screen>
      <PanelSet>
        <DetailViewPanel>
          <InputColumn>
            <Label
              label="displaykey.Web.Policy.BA.Review.VehicleNumber(vehicle)"/>
          </InputColumn>
          <InputColumn>
            <Input
              boldLabel="true"
              id="GarageLocation"
              label="displaykey.Web.PolicyLine.Vehicle.GarageLocation"
              value="vehicle.Location"/>
          </InputColumn>
          <InputColumn>
            <Input
              boldLabel="true"
              id="Vin"
              label="displaykey.Web.PolicyLine.Vehicle.Vin"
              value="vehicle.Vin"/>
          </InputColumn>
          <InputColumn>
            <Input
              boldLabel="true"
              id="VehType"
              label="displaykey.Web.PolicyLine.Vehicle.Type"
              value="vehicle.VehicleType"/>
          </InputColumn>
          <InputColumn>
            <Input
              boldLabel="true"
              id="ClassCode"
              label="displaykey.Web.PolicyLine.Vehicle.ClassCode"
              value="vehicle.VehicleClassCode"/>
          </InputColumn>
          <InputColumn>
            <Input
              boldLabel="true"
              id="Year"
              label="displaykey.Web.PolicyLine.Vehicle.Year"
              value="vehicle.Year"/>
          </InputColumn>
          <InputColumn>
            <Input
              boldLabel="true"
              id="Make"
              label="displaykey.Web.PolicyLine.Vehicle.Make"
              value="vehicle.Make"/>
          </InputColumn>
          <InputColumn>
            <Input
              boldLabel="true"
              id="Model"
              label="displaykey.Web.PolicyLine.Vehicle.Model"
              value="vehicle.Model"/>
          </InputColumn>
        </DetailViewPanel>
        <DetailViewPanel>
          <InputColumn>
            <ListViewInput
              def="BACoverageCostLV(vehicleCosts.toTypedArray(), vehicleCosts.AnyProrated, false)">
              <Toolbar/>
            </ListViewInput>
          </InputColumn>
        </DetailViewPanel>
      </PanelSet>
    </Screen>
  </Popup>
</PCF>