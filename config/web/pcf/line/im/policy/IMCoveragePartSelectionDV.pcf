<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../../pcf.xsd">
  <DetailViewPanel
    id="IMCoveragePartSelectionDV">
    <Require
      name="policyPeriod"
      type="PolicyPeriod"/>
    <Require
      name="openForEdit"
      type="boolean"/>
    <Require
      name="imLine"
      type="InlandMarineLine"/>
    <InputColumn>
      <Label
        label="displaykey.Web.Policy.IM.CoveragePartSelection"/>
      <ListViewInput
        labelAbove="true">
        <Toolbar>
          <ToolbarButton
            hideIfReadOnly="true"
            id="addCoveragePartButton"
            label="displaykey.Web.Policy.IM.AddCoveragePart">
            <MenuItemIterator
              elementName="newcoveragepart"
              value="imLine.availableParts()">
              <MenuItem
                action="imLine.maybeCreateCoveragePart( newcoveragepart )"
                id="eachpart"
                label="newcoveragepart.DisplayName"/>
            </MenuItemIterator>
          </ToolbarButton>
          <IteratorButtons
            addVisible="false"
            id="theremovebutton"
            iterator="TEMP_0_LV"
            removeConfirmMessage="displaykey.Web.Policy.IM.AreYouSure"/>
        </Toolbar>
        <ListViewPanel
          id="TEMP_0_LV">
          <RowIterator
            editable="true"
            elementName="part"
            hasCheckBoxes="true"
            hideCheckBoxesIfReadOnly="true"
            toRemove="imLine.removeCoveragePart( part )"
            value="imLine.IMCoverageParts*.Subtype">
            <IteratorSort
              sortBy="part.Description"
              sortOrder="1"/>
            <Row>
              <Cell
                id="decription"
                label="displaykey.Web.Policy.IM.CoveragePart"
                value="part.Description"/>
            </Row>
          </RowIterator>
        </ListViewPanel>
      </ListViewInput>
    </InputColumn>
  </DetailViewPanel>
</PCF>