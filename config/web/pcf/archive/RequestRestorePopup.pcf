<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../pcf.xsd">
  <Popup
    canEdit="true"
    id="RequestRestorePopup"
    startInEditMode="true"
    title="displaykey.Web.Archive.RequestRestorePopup.Title">
    <LocationEntryPoint
      signature="RequestRestorePopup(policyTerm : PolicyTerm)"/>
    <Variable
      name="policyTerm"
      type="PolicyTerm"/>
    <Variable
      initialValue="policyTerm.createRestoreRequest(gw.plugin.util.CurrentUserUtil.getCurrentUser().getUser(), &quot;&quot;, true)"
      name="restoreRequest"
      type="PolicyTermRestoreRequest"/>
    <Screen>
      <Toolbar>
        <EditButtons
          updateLabel="displaykey.Web.Archive.RequestRestorePopup.RestoreButtonLabel"/>
      </Toolbar>
      <PanelSet>
        <DetailViewPanel
          visible="perm.PolicyPeriod.restorefromarchive">
          <InputColumn>
            <TextAreaInput
              editable="true"
              id="ReasonText"
              label="displaykey.Web.Archive.RequestRestorePopup.RestoreReasonLabel"
              numRows="8"
              value="restoreRequest.Reason"/>
          </InputColumn>
        </DetailViewPanel>
      </PanelSet>
    </Screen>
  </Popup>
</PCF>