<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../pcf.xsd">
  <Screen
    editable="true"
    id="PolicySearchScreen">
    <CardViewPanel
      hideTabIfSingle="true">
      <Card
        id="solrSearch"
        onSelect="gw.pcf.PolicySearchHelper.registerBasicTabActivated()"
        title="displaykey.Web.PolicySearch.SolrSearch"
        visible="gw.api.system.PLConfigParameters.FreeTextSearchEnabled.Value and ScriptParameters.EnableDisplayBasicSearchTab">
      <PanelRef
          available="true"
          def="SolrPolicySearchPanelSet()"
          editable="true"/>
      </Card>
      <Card
        id="dbSearch"
        onSelect="gw.pcf.PolicySearchHelper.registerAdvancedTabActivated()"
        selectOnEnter="gw.pcf.PolicySearchHelper.advancedTabLastActivated()"
        title="displaykey.Web.PolicySearch.DatabaseSearch">
        <PanelRef
          def="DatabasePolicySearchPanelSet()"/>
      </Card>
    </CardViewPanel>
  </Screen>
</PCF>
