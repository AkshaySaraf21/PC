<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../pcf.xsd">
  <ListViewPanel
    id="PolicySearch_ResultsLV"
    mode="Audit">
    <Require
      name="searchResults"
      type="PolicyPeriodSummaryQuery"/>
    <ExposeIterator
      flags="openUserRoleOwner"
      valueType="PolicyPeriodSummary"
      widget="PolicyPeriodSummaryIterator"/>
    <RowIterator
      checkBoxVisible="true"
      editable="false"
      elementName="policyPeriodSummary"
      hasCheckBoxes="true"
      id="PolicyPeriodSummaryIterator"
      pickValue="policyPeriodSummary"
      value="searchResults">
      <ToolbarFlag
        condition="policyPeriodSummary.Job.CloseDate == null"
        name="openUserRoleOwner"/>
      <Row
        useArchivedStyle="policyPeriodSummary.TermArchived">
        <Cell
          action="JobForward.go(policyPeriodSummary.Job)"
          id="PolicyNumber"
          label="displaykey.Web.PolicySearch.Results.PolicyNumber"
          sortBy="policyPeriodSummary.PolicyNumber"
          value="policyPeriodSummary.PolicyNumberDisplayString"/>
        <Cell
          enableSort="false"
          id="MainContact"
          label="displaykey.Web.PolicySearch.Results.MainContact"
          value="policyPeriodSummary.InsuredDisplayName"/>
        <Cell
          action="AccountFileDoRetrievalForward.go(policyPeriodSummary.AccountNumber)"
          available="perm.System.viewaccount"
          id="AccountNumber"
          label="displaykey.Web.PolicySearch.Results.AccountNumber"
          value="policyPeriodSummary.AccountNumber"/>
        <Cell
          enableSort="false"
          id="Product"
          label="displaykey.Web.PolicySearch.Results.Product"
          value="policyPeriodSummary.Product"/>
        <Cell
          enableSort="false"
          id="EffectiveDate"
          label="displaykey.Web.PolicySearch.Results.EffectiveDate"
          value="policyPeriodSummary.EditEffectiveDate"/>
        <Cell
          enableSort="false"
          id="PolicyPeriodStatus"
          label="displaykey.Web.PolicySearch.Results.PolicyPeriodStatus"
          value="policyPeriodSummary.PeriodDisplayStatus"/>
        <Cell
          enableSort="false"
          id="Producer"
          label="displaykey.Web.PolicySearch.Results.Producer"
          value="policyPeriodSummary.ProducerName"/>
        <Cell
          enableSort="false"
          id="Underwriter"
          label="displaykey.Web.PolicySearch.Results.Underwriter"
          value="policyPeriodSummary.Job.Underwriter"/>
      </Row>
    </RowIterator>
  </ListViewPanel>
</PCF>
